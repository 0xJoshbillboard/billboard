{
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "composite": true,
    "allowJs": false,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "firebase.ts"],
  "exclude": ["node_modules", "build"]
}
